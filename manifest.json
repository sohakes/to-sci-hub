{
    
      "manifest_version": 2,
      "name": "To Sci-Hub",
      "version": "1.0",
    
      "description": "Access the website via Sci-Hub",

      "background": {
        "scripts": ["toscihub.js"]
      },

      "browser_action": {
        "default_icon": {
          "16": "icons/page-16.png",
          "32": "icons/page-32.png"
        }
      },

      "permissions": [
        "tabs"
      ]
    
    }